{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES6",
      "DOM"
    ],
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    // "paths": {}, enhanced import paths
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ]
}