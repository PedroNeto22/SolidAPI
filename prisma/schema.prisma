generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  tasks      Tasks[]

  @@map("users")
}

model Tasks {
  id         Int      @id @default(autoincrement())
  title      String   @unique
  body       String   @db.VarChar(255)
  status     String
  priority   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  User       User?    @relation(fields: [userId], references: [id])
  userId     Int?

  @@map("tasks")
}
